{
  "name": "yourown",
  "private": true,
  "version": "0.0.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:client": "npm --prefix apps/client run dev",
    "dev:server": "npm --prefix apps/server run dev",
    "dev": "concurrently -n client,server -c auto \"npm:dev:client\" \"npm:dev:server\"",
    "build": "npm --prefix apps/client run build && npm --prefix apps/server run build",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:cov": "vitest run --coverage",
    "test:unit": "vitest run apps/server/src/**/*.unit.spec.ts",
    "test:integration": "vitest run apps/server/src/**/*.int.spec.ts",
    "test:system": "vitest run apps/server/src/**/*.e2e.spec.ts"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ]
  },
  "ts-jest": {
    "useESM": true
  },
  "dependencies": {
    "@faker-js/faker": "^10.1.0",
    "@yourown/ui-patterns": "^0.0.1",
    "archiver": "^7.0.1",
    "cors": "^2.8.5",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@testcontainers/postgresql": "^11.8.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/coverage-v8": "^4.0.8",
    "babel-plugin-react-compiler": "^19.1.0-rc.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "jest": "^30.2.0",
    "supertest": "^7.1.4",
    "testcontainers": "^11.8.0",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "vitest": "^4.0.8"
  }
}
